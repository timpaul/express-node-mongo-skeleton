extends layout

block content
    .app-header
        h1.centre Admin
    .main
        h2.centre Actions
        ul.menu
            li.menu__item
                a(href='/') Switch to a different player
            li.menu__item
                a(href='/delete/all') Delete all events
            li.menu__item
                a(href='/load-defaults') Load default jobs and users
        if history[0]
            h2.centre Delete specific events
        table
            for event in history
                - var date = Sugar.Date.format(event.jobDate, '%x %X')
                tr
                    td #{event.userName} 
                    td #{event.jobTitle} 
                    td #{date}
                    td
                        a(href='/delete/event-' + event._id) Delete
